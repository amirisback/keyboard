<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frogo_rv_empty_root_linear_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/frogo_rv_empty_iv_poster"
        android:layout_width="@dimen/frogo_dimen_150dp"
        android:layout_height="@dimen/frogo_dimen_150dp"
        android:src="@drawable/frogo_ic_empty_view" />

    <TextView
        android:id="@+id/frogo_rv_empty_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/frogo_dimen_8dp"
        android:text="@string/frogo_no_data_found"
        android:textAllCaps="true"
        android:textColor="@color/tv_text_color"
        android:textSize="@dimen/frogo_dimen_font_20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/frogo_rv_empty_tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frogo_please_insert_data" />

</LinearLayout>