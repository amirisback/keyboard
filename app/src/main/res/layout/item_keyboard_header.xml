<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/frogo_dimen_64dp"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/frogo_dimen_8dp">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu_news"
        app:tint="@color/tv_text_color" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:text="News API"
        android:textColor="@color/tv_text_color"
        android:textSize="@dimen/frogo_dimen_font_10sp" />

</LinearLayout>